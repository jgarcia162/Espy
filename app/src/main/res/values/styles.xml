<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base"/>


    <!-- the theme applied to the application or activity -->

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="fontPath">fonts/poiret_one.ttf</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/PrimaryColor2</item>
        <item name="colorPrimaryDark">@color/PrimaryDarkColor2</item>
        <item name="colorAccent">@color/AccentColor2</item>
    </style>


    <style name="EditTextStandard" parent="Widget.Design.TextInputLayout">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">5dp</item>
    </style>


    <style name="ButtonStandard" parent="Widget.AppCompat.Button">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">#218C8D</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="TextViewStart" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:gravity">center</item>
        <item name="android:textSize">5sp</item>
    </style>


    <style name="TextView" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#218C8D</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="CardList" parent="AppTheme.Base">
        <item name="android:background">#FFFFFF</item>
    </style>

</resources>
